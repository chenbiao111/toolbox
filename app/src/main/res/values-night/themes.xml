<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Tools" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/zts</item>
        <item name="colorPrimaryVariant">@color/zts</item>
        <item name="colorOnPrimary">@color/zts</item>
        <item name="colorAccent">@color/zts</item>
        <item name="colorControlHighlight">@color/rippleColor</item>
        <item name="colorControlNormal">@color/rippleColor</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/zts</item>
        <item name="colorSecondaryVariant">@color/zts</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->

        <item name="shapeAppearanceSmallComponent">@style/ShapeAppearance.Tools</item>
        <item name="shapeAppearanceMediumComponent">@style/ShapeAppearance.Tools</item>
        <item name="shapeAppearanceLargeComponent">@style/ShapeAppearance.Tools</item>

        <item name="discreteSeekBarStyle">@style/Widget.DiscreteSeekBar.Tools</item>
    </style>

    <style name="Widget.AppCompat.AutoCompleteTextView.Tools" parent="Widget.AppCompat.AutoCompleteTextView">
        <item name="android:popupElevation">2dp</item>
    </style>

    <style name="Widget.DiscreteSeekBar.Tools" parent="Widget.DiscreteSeekBar">
        <item name="dsb_indicatorTextAppearance">@style/Widget.DiscreteIndicatorTextAppearance.Tools</item>
    </style>

    <style name="Widget.DiscreteIndicatorTextAppearance.Tools" parent="Widget.DiscreteIndicatorTextAppearance">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="ShapeAppearance.Tools" parent="ShapeAppearance.MaterialComponents.SmallComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">12dp</item>
    </style>

    <style name="Theme.Tools.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.Tools.FullScreen" parent="Theme.Tools.NoActionBar">
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="Theme.Tools.AppBarOverlay" parent="ThemeOverlay.MaterialComponents.ActionBar" />

    <style name="Theme.Tools.PopupOverlay" parent="Widget.AppCompat.PopupMenu.Overflow" />
</resources>